$(function(){
  $(document).on("change", "#stylesheet_framework", function(){
    if($(this).val()) {
      $.get('/stylesheets/' + $(this).val() + '/versions');
    } else {
      $("#stylesheet_version").empty();
    }
  });

  $(document).on("click", ".viewer-toggle button", function(){
    console.log("clicked");
    $("#preview-window").removeClass().addClass($(this).data("viewport-type"));
  });
});
