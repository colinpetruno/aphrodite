$(function(){
  $(document).on("change", "#preview-iframe-select", function(){
    var $iframe = $("#preview-iframe");
    var stylesheetId = $iframe.data("stylesheet-id");
    var selectedPage = $(this).val();
    var rootUrl = "<%= Rails.application.config.root_url %>";
    var newUrl = rootUrl + "/" + selectedPage + "_example.html?preview-css=true&stylesheetId=" + stylesheetId;
    $("#preview-iframe").attr("src", newUrl);
  });
});
