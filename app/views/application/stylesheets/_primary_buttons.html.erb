<div class="row">
  <div class="col-xs-12" style="text-align: center;">
    <%= link_to_if(
      current_account.site_url.present?,
      t(".preview"),
      current_account.site_url + "?aphrodite=true&aphrodite-id=#{@stylesheet.id}",
      target: :blank,
      class: "btn btn-info btn-lg",
      data: { no_turbolink: true }) do %>
      <%= link_to t(".configure_preview"), edit_account_path, class: "btn btn-default btn-lg" %>
    <% end %>

    <button type="button" class="btn btn-link btn-lg" data-toggle="modal" data-target="#embed-instructions">
      Embed Instructions
    </button>
    <br><br>
  </div>
</div>
