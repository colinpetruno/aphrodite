<!DOCTYPE html>
<html>
  <head>
    <title>Aphrodite Css</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= render "shared/fonts" %>
    <% if Rails.env.production? %>
      <script src="//d2wy8f7a9ursnm.cloudfront.net/bugsnag-3.min.js" data-apikey="5064645706772365c1ab89cd8e5a695d"></script>
    <% end %>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => "reload" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
    <%= render partial: "application/shared/google_analytics" %>
    <%= render partial: "application/shared/zopim" %>
    <%= render partial: "shared/mixpanel" %>
    <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
  </head>

  <body class="<%= "#{controller_name}-#{action_name}" %>" data-current-page="<%= "#{controller_name}##{action_name}" %>">
    <%= render "application/shared/header" %>

    <%= yield %>

    <% if content_for?(:footer) %>
      <% yield(:footer) %>
    <% end %>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/js/bootstrap.min.js" integrity="sha384-vZ2WRJMwsjRMW/8U7i6PWi6AlO1L79snBrmgiDpgIWJ82z8eA5lenwvxbMV1PAh7" crossorigin="anonymous"></script>
    <%= javascript_include_tag 'cable' %>
  </body>
</html>
