<%= simple_form_for registration do |f| %>
  <%= f.input :pricing_plan_id, as: :hidden %>
  <%= f.input :account_name %>
  <%= f.input :site_url %>

  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <%= f.input :pricing_plan_id,
    as: :select,
    collection: PricingPlan.all,
    label_method: :label %>

  <footer>
    <%= f.button :submit, class: "btn" %>
  </footer>
<% end %>
